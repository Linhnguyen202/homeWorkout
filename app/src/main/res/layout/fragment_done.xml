<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.exercise.doneFragment.DoneFragment"
        android:background="@color/main_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/line">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/beginner_0"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shadow_opacity"
                android:text="Workout Completed"
                android:gravity="bottom"
                android:padding="20dp"
                android:fontFamily="@font/afacad_bold"
                android:textColor="@color/white"
                android:textSize="40sp"/>
        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.46"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/line"
            app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/workoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chest - Beginner"
                android:textColor="@color/white"
                android:fontFamily="@font/afacad_bold"
                android:textSize="30sp"
                android:layout_marginTop="5dp"/>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="space_between"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/numberExTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textColor="@color/white"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="35sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/numberExTitle"
                        android:text="Exercise"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="25sp"
                        android:textColor="@color/second_background"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/caloTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250"
                        android:textColor="@color/white"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="35sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/caloTitle"
                        android:text="Calories"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="25sp"
                        android:textColor="@color/second_background"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/durationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/white"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="35sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/durationTitle"
                        android:text="Duration"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="25sp"
                        android:textColor="@color/second_background"
                        />
                </RelativeLayout>
            </com.google.android.flexbox.FlexboxLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How do you feel?"
                android:textColor="@color/white"
                android:fontFamily="@font/afacad_bold"
                android:textSize="25sp"
                android:layout_marginTop="15dp"/>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="space_between"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/hardContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inactive_circle">
                        <ImageView
                            android:id="@+id/hardImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hard_inactive"
                            android:padding="20dp"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hard"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/second_background"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/normalContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inactive_circle">
                        <ImageView
                            android:id="@+id/normalImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/normal_inactive"
                            android:padding="20dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/second_background"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/easyContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inactive_circle">
                        <ImageView
                            android:id="@+id/easyImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/easy_inactive"
                            android:padding="20dp"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/second_background"
                        android:fontFamily="@font/afacad_bold"
                        android:textSize="20sp"/>
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/finishBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_color"
                    android:text="FINISH"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/afacad_bold"
                    android:padding="5dp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
