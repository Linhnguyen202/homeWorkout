<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background"
    tools:context=".ui.main.detailFragment.DetailFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingTollbar"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:backgroundTint="@color/black"
            app:expandedTitleTextColor="@color/white"
            >
            <ImageView
                android:id="@+id/imgMeal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_anchor="@id/appBar"
                app:layout_anchorGravity="center"
                android:src="@drawable/beginner_0"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shadow_opacity"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/white"
                />
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            >
            <TextView
                android:id="@+id/workoutTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day 01 - Warm Up"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/afacad_bold"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/numberEx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="04 Workouts for Beginner"
                android:textColor="#D0FD3E"
                android:textSize="20sp"
                android:fontFamily="@font/afacad_medium"
                android:layout_marginBottom="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="#2C2C2E"
                    android:layout_marginRight="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="10dp"
                      >
                        <ImageView
                            android:id="@+id/playIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/play"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/timeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60 mins"
                            android:fontFamily="@font/afacad_medium"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/playIcon"
                            android:layout_marginLeft="5dp"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="#2C2C2E"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="10dp"
                        >
                        <ImageView
                            android:id="@+id/flameIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/flame"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/caloTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="350 cal"
                            android:fontFamily="@font/afacad_medium"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/flameIcon"
                            android:layout_marginLeft="5dp"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/descriptionTxt"
                android:text="@string/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/afacad_medium"
                android:textSize="16sp"
                android:layout_marginTop="15dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/execiseList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleVerticalOffset="3dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:hideOnScroll="true"
        android:backgroundTint="@color/main_background"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/startBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Start Workout"
                android:background="@color/primary_color"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/afacad_bold"/>
        </androidx.cardview.widget.CardView>

    </com.google.android.material.bottomappbar.BottomAppBar>
</androidx.coordinatorlayout.widget.CoordinatorLayout>