<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/second_background"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/second_background">
        <ImageView
            android:id="@+id/bannerEx"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/beginner_0"/>
        <TextView
            android:id="@+id/execiseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bannerEx"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Simple Warm-Up Exercises"
            android:textColor="@color/white"
            android:fontFamily="@font/afacad_bold"
            android:textSize="24sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/execiseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/execiseTitle"
            app:layout_constraintTop_toBottomOf="@+id/execiseTitle"
            android:text="0:30"
            android:textColor="@color/primary_color"
            android:fontFamily="@font/afacad_medium"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>