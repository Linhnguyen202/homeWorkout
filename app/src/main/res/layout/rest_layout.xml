<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background"
    android:visibility="gone"
    android:id="@+id/restContainer">

    <TextView
        android:id="@+id/titleRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:text="Rest"
        android:gravity="center"
        android:fontFamily="@font/afacad_bold"
        android:textColor="@color/white"
        android:textSize="35sp"
        />
    <Chronometer
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/titleRest"
        android:textColor="@color/white"
        android:fontFamily="@font/afacad_bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        android:layout_marginTop="20dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/addTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_toStartOf="@+id/viewBtn">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/second_background"
                android:text="+20s"
                android:textColor="@color/white"
                android:fontFamily="@font/afacad_bold"
                android:textSize="20sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                />
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/viewBtn"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/skipBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_toEndOf="@+id/viewBtn">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_color"
                android:text="Skip"
                android:textColor="@color/black"
                android:fontFamily="@font/afacad_bold"
                android:textSize="20sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:id="@+id/totalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/nextExTite"
        android:textColor="@color/white"
        android:fontFamily="@font/afacad_bold"
        android:textSize="20sp"

        android:paddingHorizontal="20dp"
        android:text="1/20"/>
    <TextView
        android:id="@+id/nextExTite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bannerContainer"
        android:text="Next exercise"
        android:textColor="@color/white"
        android:fontFamily="@font/afacad_bold"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="20dp"
        />
    <RelativeLayout
        android:id="@+id/bannerContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
       >
       <ImageView
           android:id="@+id/nextExBannner"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/corner_bg_rest"
            android:src="@drawable/beginner_0"
           android:clipToOutline="true"
           android:scaleType="centerCrop"
          />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>