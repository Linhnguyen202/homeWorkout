<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HomeWorkout" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#000000</item>  //black color
        <item name="colorControlHighlight">#000000</item>
    </style>

    <style name="Theme.HomeWorkout" parent="Base.Theme.HomeWorkout" >
        <item name="android:colorControlNormal">#c5c5c5</item>
        <item name="android:colorControlActivated">#90A4AE</item>  //black color
        <item name="android:colorControlHighlight">#000000</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#D0FD3E</item>
        <item name="tabPaddingStart">20dp</item>
        <item name="tabPaddingEnd">20dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">#D0FD3E</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/afacad_bold</item>
        <item name="android:textColor">@color/icon_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#90A4AE</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="CustomToolbarTheme" parent="@android:style/TextAppearance.Medium">
        <!-- HERE ARE THE CHANGES - Change color of different texts -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">20sp</item>


    </style>

    <style name="CustomCalenderTheme" parent="@android:style/TextAppearance.Medium">
        <!-- HERE ARE THE CHANGES - Change color of different texts -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">20sp</item>


    </style>





</resources>